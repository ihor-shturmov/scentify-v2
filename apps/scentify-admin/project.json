{
  "name": "scentify-admin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/scentify-admin/src",
  "tags": [
    "scope:admin",
    "type:app"
  ],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/admin",
        "browser": "apps/scentify-admin/src/main.ts",
        "polyfills": [
          "zone.js"
        ],
        "tsConfig": "apps/scentify-admin/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/scentify-admin/public"
          }
        ],
        "styles": [
          "apps/scentify-admin/src/styles.css"
        ]
      },
      "configurations": {
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/scentify-admin/src/environments/environment.ts",
              "with": "apps/scentify-admin/src/environments/environment.prod.ts"
            }
          ],
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "options": {
        "proxyConfig": "apps/scentify-admin/proxy.conf.json"
      },
      "configurations": {
        "production": {
          "buildTarget": "scentify-admin:build:production"
        },
        "development": {
          "buildTarget": "scentify-admin:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "scentify-admin:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{projectRoot}/test-output/jest/coverage"
      ],
      "options": {
        "jestConfig": "apps/scentify-admin/jest.config.cts",
        "tsConfig": "apps/scentify-admin/tsconfig.spec.json"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "scentify-admin:build",
        "staticFilePath": "dist/apps/admin/browser",
        "spa": true
      }
    }
  }
}